@model ScrappingManagement.Web.Dto.SupplierLedgerDto

@{
    ViewData["Title"] = "Supplier Ledger";
    var suppliers = ViewBag.Suppliers as List<ScrappingManagement.Web.Models.Supplier>;
}

<h2>Supplier Ledger</h2>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4 mb-3">
            <label for="selectedSupplierId" class="form-label">Supplier:</label>
            <select name="selectedSupplierId" id="selectedSupplierId" class="form-select">
                <option value="">-- Select Supplier --</option>
                @if (suppliers != null)
                {
                    foreach (var supplier in suppliers)
                    {
                        <option value="@supplier.Id" selected="@(Model.SelectedSupplierId == supplier.Id)">@supplier.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-3 mb-3">
            <label for="fromDate" class="form-label">From Date:</label>
            <input type="date" name="fromDate" id="fromDate" class="form-control" value="@(Model.FromDate.HasValue? Model.FromDate.Value.ToString("yyyy-MM-dd") : "")" />
        </div>
        <div class="col-md-3 mb-3">
            <label for="toDate" class="form-label">To Date:</label>
            <input type="date" name="toDate" id="toDate" class="form-control" value="@(Model.ToDate.HasValue? Model.ToDate.Value.ToString("yyyy-MM-dd") : "")" />
        </div>
        <div class="col-md-2 mb-3 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Filter</button>
            <a asp-action="Index" class="btn btn-secondary me-2">Clear</a>
            <button type="button" class="btn btn-info" id="printLedgerBtn" @(!Model.SelectedSupplierId.HasValue ? "disabled" : "")><i class="bi bi-printer"></i> Print</button>
        </div>
    </div>
</form>

@if (Model.SelectedSupplierId.HasValue)
{
    <div id="ledgerContent">
        <div class="alert alert-info mt-3">
            <strong>Total Debit:</strong> @Model.TotalDebit.ToString("N2") |
            <strong>Total Credit:</strong> @Model.TotalCredit.ToString("N2") |
            <strong>Due Amount:</strong>
            <span class="@(Model.DueAmount > 0 ? "text-danger" : "text-success") fw-bold">
                @Model.DueAmount.ToString("N2")
            </span>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <h6>Debits (Quotes)</h6>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Bill No.</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.LedgerEntries.Where(e => e.Type == "Quote").OrderBy(e => e.Date))
                        {
                            <tr>
                                <td>@entry.Date.ToString("dd-MM-yyyy")</td>
                                <td>
                                    <a asp-controller="Quotes" asp-action="Details" asp-route-id="@entry.DocumentId">
                                        @entry.Description
                                    </a>
                                </td>
                                <td class="text-end">@entry.Debit.ToString("N2")</td>
                            </tr>
                        }
                        @if (!Model.LedgerEntries.Any(e => e.Type == "Quote"))
                        {
                            <tr><td colspan="3">No quotes found for this supplier and date range.</td></tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" class="text-end fw-bold">Total Debits</td>
                            <td class="text-end fw-bold">@Model.TotalDebit.ToString("N2")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-md-6">
                <h6>Credits (Payments)</h6>
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model.LedgerEntries.Where(e => e.Type == "Payment").OrderBy(e => e.Date))
                        {
                            <tr>
                                <td>@entry.Date.ToString("dd-MM-yyyy")</td>
                                <td>
                                    <a asp-controller="Payments" asp-action="Details" asp-route-id="@entry.DocumentId">
                                        @entry.Description
                                    </a>
                                </td>
                                <td class="text-end">@entry.Credit.ToString("N2")</td>
                            </tr>
                        }
                        @if (!Model.LedgerEntries.Any(e => e.Type == "Payment"))
                        {
                            <tr><td colspan="3">No payments found for this supplier and date range.</td></tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" class="text-end fw-bold">Total Credits</td>
                            <td class="text-end fw-bold">@Model.TotalCredit.ToString("N2")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <p>Please select a supplier to view their ledger.</p>
}

@section Scripts {
   <script src="~/js/supplier-ledger-print.js" asp-append-version="true"></script>
}
